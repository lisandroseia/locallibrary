extends layout 

block content 
    h1 #{title}

    p Do you really want to delete this book?

    if(book_instances.length)
        p #[strong Delete the following copies before attempting to delete this genre.]

        h4 Copies

        dl
        each copy in book_instances 
            dt 
                a(href=copy.url) #{copy.book.title}
                | (#{copy.status})
            dd
    else
        form(method="POST" action="")
            div.form-group
                input#genreid.form-control(type='hidden',name='bookid', required='true', value=book._id )
                button.btn.btn-primary(type='submit') Delete
